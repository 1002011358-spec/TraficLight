<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TraficLight.ViewModels"
             xmlns:m="clr-namespace:TraficLight.Models"
             x:Class="TraficLight.MainPage"
             x:DataType="vm:MainPageVM">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" >
        <Frame>
            <BoxView BackgroundColor="{Binding RedColor}"/>
        </Frame>
        <Frame Grid.Row="1">
            <BoxView BackgroundColor="{Binding YellowColor}"/>
        </Frame>
        <Frame Grid.Row="2">
            <BoxView BackgroundColor="{Binding GreenColor}"/>
        </Frame>
        <Button Grid.Row="3" Text="{x:Static m:Strings.ChangeLightText}" Command="{Binding ChangeLightCommand}"/>
    </Grid>
</ContentPage>
